@model List<ResultOrderingDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Layout/Index.cshtml";
    int count = 1;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Total price</th>
                            <th>Order date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model is not null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(count++)</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.OrderDate</td>
                                    <td><a href="/user/Order/OrderDetails?id=@item.Id" class="btn btn-primary">Details</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
