@model UpdateDiscountOfferDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}


<div class="col-md-12">
    <div class="chart-box">
        <h4>Category Table</h4>
        <p>Add <code>.table-bordered</code> for borders on all sides of the table and cells.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <form method="post" action="/admin/DiscountOffer/Update">
                <input type="hidden" name="Id" value="@Model.Id" />
                <br />
                <p>Name</p>
                <input type="text" name="Title" value="@Model.Title" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />  <p>Subtitle</p>
                <input type="text" name="Subtitle" value="@Model.Subtitle" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />
                <p>ImageUrl</p>
                <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br /><p>ButtonTitle</p>
                <input type="text" name="ButtonTitle" value="@Model.ButtonTitle" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />

                <input type="submit" value="Update" class="btn btn-primary" />

            </form>

        </div>
    </div>
</div>

