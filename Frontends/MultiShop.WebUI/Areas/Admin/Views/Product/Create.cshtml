
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Product Table</h4>
        <p>Add <code>.table-bordered</code> for borders on all sides of the table and cells.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <form method="post" action="/admin/Product/Create">
                <p>Name</p>
                <input type="text" name="Name"  class="form-control" id="inputSuccess1" aria-describedby="helpBlock2">
                <br />
                <p>Description</p>
                <input type="text" name="Description" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2">
                <br />
                <p>Price</p>
                <input type="number" name="Price" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2">
                <br />
                <p>Image</p>
                <input type="text" name="ImageUrl" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2">
                <br />
                <p>Categorys</p>
                <select name="CategoryId" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2">
                    <option>Select</option>
                @foreach (var item in ViewBag.categorys)
                {
                        <option value="@item.Id">@item.Name</option>
                }
           
                 
                </select>
                <br />
                <input type="submit" value="Create" class="btn btn-secondary" />

            </form>

        </div>
    </div>
</div>

