@model ResultProductDetailsDTO

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Product Table</h4>
        <p>Add <code>.table-bordered</code> for borders on all sides of the table and cells.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <form method="post" action="/admin/Product/ProductDetailsUpdate">

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />
                <p>Descrtiption</p>
                <textarea asp-for="Descrtiption" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2"></textarea>
               
                <br />
                <p>Info</p>
                <textarea asp-for="Info" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2"></textarea>
                
                <br />
                <input type="submit" value="Update" class="btn btn-warning" />

            </form>

        </div>
    </div>
</div>




