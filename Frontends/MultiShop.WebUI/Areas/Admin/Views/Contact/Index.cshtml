@model List<ResultContactDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Category Table</h4>
        <p>Add <code>.table-bordered</code> for borders on all sides of the table and cells.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>

                        <th>Subject</th>
                        <th>Message</th>
                        <th>SendDate</th>

                        <th>IsRead</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model is not null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@(++count)</th>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td>
                                <td>@item.SendDate.ToShortDateString()</td>
                                <td>@item.IsRead</td>

                                <td><a href="/admin/Contact/Update?id=@item.Id" class="btn btn-primary">Update</a></td>
                                <td><a href="/admin/Contact/Delete?id=@item.Id" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }

                    }




                </tbody>
            </table>

        </div>
    </div>
</div>
