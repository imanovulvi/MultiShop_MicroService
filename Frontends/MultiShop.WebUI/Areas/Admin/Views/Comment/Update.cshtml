@model UpdateCommentDTO
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}


<div class="col-md-12">
    <div class="chart-box">
        <h4>Category Table</h4>
        <p>Add <code>.table-bordered</code> for borders on all sides of the table and cells.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <form method="post" action="/admin/Comment/Update">
                <input type="hidden" name="Id" value="@Model.Id" />
                <br />
                <p>NameSurname</p>
                <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />
                <p>Email</p>
                <input type="text" name="Email" value="@Model.Email" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />
                <p>CommentDetail</p>
                <input type="text" name="CommentDetail" value="@Model.CommentDetail" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />
                <p>CreateDate</p>
                <input type="text" name="CreateDate" value="@Model.CreateDate" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />
                <p>ProductId</p>
                <select asp-for="@Model.Status" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2">
                    <option value="1">True</option>
                    <option value="0">False</option>
                </select>
                <br />

                <p>ProductId</p>
                <input type="text" name="ProductId" value="@Model.ProductId" class="form-control" id="inputSuccess1" aria-describedby="helpBlock2" />
                <br />

                <input type="submit" value="Update" class="btn btn-primary" />

            </form>

        </div>
    </div>
</div>

