@model List<ResultCommentDTO>
<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        @if(Model is not null)
        { <div class="col-md-6">
                <h4 class="mb-4">Comments count @Model.Count</h4>
        @foreach(var item in Model)
        {
           
                <div class="media mb-4">
                    <img src="~/online-shop-website-template/img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@item.NameSurname<small> - <i>@item.CreateDate.ToShortDateString()</i></small></h6>
                        <div class="text-primary mb-2">
                        @for (int i = 0; i < item.Rating; i++)
                        {
                                <i class="fas fa-star"></i>
                        }
                        </div>
                           
                           
                       
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            
        }</div>
        }

        
        <div class="col-md-6">
            <h4 class="mb-4">Leave a review</h4>
            <small>Your email address will not be published. Required fields are marked *</small>
            <div class="d-flex my-3">
                <p class="mb-0 mr-2">Your Rating * :</p>
                <div class="text-primary">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
            </div>
            <form method="post" action="/ProductList/AddComment">
                <input name="ProductId" type="hidden" value="@ViewBag.Id" />
                <div class="form-group">
                    <label for="name">Your Name Surname *</label>
                    <input type="text" class="form-control" id="name" name="NameSurname">
                </div>
                <div class="form-group">
                    <label for="email">Your Email *</label>
                    <input type="email" class="form-control" id="email" name="Email">
                </div>
                <div class="form-group">
                    <label for="message">Your Review *</label>
                    <textarea id="message" cols="30" rows="5" class="form-control" name="CommentDetail"></textarea>
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                </div>
            </form>
        </div>
    </div>
</div>
